<UIView>

	<!-- Sapphire -->
	<Component name="SapphireButton">
		<relativePosition>1400.0, 1030.0</relativePosition>
	</Component>

	<!-- Change lanes mod -->
	<Component name="LaneUIToggle" optional="true">
		<relativePosition>4.0, 700.0</relativePosition>
	</Component>

	<!-- Extended road upgrade -->
	<Component name="TSBar">
		<Component name="OptionsBar">
			<Component name="RoadsOptionPanel(RoadsPanel)" optional="true">
				<Component name="ExtendedRoadUpgradePanel" optional="true">
					<relativePosition>222.0, 0.0</relativePosition>

					<Component name="ExtendedRoadUpgradeButtonTwoWay">
						<size>36.0, 36.0</size>
					</Component> 
					<Component name="ExtendedRoadUpgradeButtonOneWay">
						<size>36.0, 36.0</size>
					</Component>
				</Component>
			</Component>
		</Component>
	</Component>

	<!-- Extended building info -->  
	<Component name="FullScreenContainer">
		<Component name="(Library) ZonedBuildingWorldInfoPanel">
			<Component name="buildingWindowObject" optional="true">
				<atlas>BackgroundsAtlas</atlas>
				<backgroundSprite>DefaultPanelBackground</backgroundSprite>
				<color>White</color>

				<Component name=".*" name_regex="true">
					<textColor optional="true">Black</textColor>
				</Component>
			</Component>
		</Component>
	</Component>

	<!-- City vitals -->
	<Component name="CityVitalsWatchButton" optional="true">
		<size>32.0, 32.0</size>
		<relativePosition>1300.0, 1030.0</relativePosition>
	</Component>

	<Component name="CityVitalsWatchPanel" optional="true">
		<atlas>BackgroundsAtlas</atlas>
		<backgroundSprite>DefaultPanelBackground</backgroundSprite>
		<color>White</color>

		<Component name=".*" name_regex="true" recursive="true">
			<textColor optional="true">Black</textColor>
		</Component>
	</Component>

	<Component name="CityVitalsWatchSettingsPanel" optional="true">
		<atlas>BackgroundsAtlas</atlas>
		<backgroundSprite>DefaultPanelBackground</backgroundSprite>
		<color>White</color>

		<Component name=".*" name_regex="true" recursive="true">
			<textColor optional="true">Black</textColor>
		</Component>
	</Component>

	<!-- No pillars -->
	<Component name="UIButton" hash="1B0CDBFE9" optional="true">
		<relativePosition>1700.0, 1012.0</relativePosition>
	</Component>

	<Component name="UIButton" hash="180411189" optional="true">
		<relativePosition>1700.0, 1044.0</relativePosition>
	</Component>

	<!-- Toggle Snapping Mod -->
	<Component name="TSBar">
		<Component name="OptionsBar">
			<Component name="RoadsOptionPanel(RoadsPanel)" optional="true">
				<Component name="SnappingToggle" optional="true">
					<relativePosition>15.0, 57.0</relativePosition>
				</Component>
			</Component>
		</Component>
	</Component>
	
	<!-- Toggle Street Direction Viewer Mod -->
	<Component name="TSBar">
		<Component name="OptionsBar">
			<Component name="RoadsOptionPanel(RoadsPanel)" optional="true">
				<Component name="StreetDirectionViewerButton" optional="true">
					<relativePosition>-50.0, 57.0</relativePosition>
				</Component>
			</Component>
		</Component>
	</Component>

	<!-- Toggle traffic lights -->
	<Component name="TSBar">
		<Component name="OptionsBar">
			<relativePosition>226.0, -20.0</relativePosition>
			<Component name="RoadsOptionPanel(RoadsPanel)" optional="true">
				<Component name="SnappingToggle">
					<relativePosition sticky="true">16.0, 0.0</relativePosition>
				</Component>

				<Component name="UIButton" hash="2E0B2DC2">
					<size>36.0, 36.0</size>
					<relativePosition>220.0, 0.0</relativePosition>
				</Component>
			</Component>
		</Component>
	</Component>
</UIView>